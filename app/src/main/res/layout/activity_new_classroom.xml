<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewClassroomActivity">

    <EditText
        android:id="@+id/etClassroomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Classname Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/etClassroomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSaveClassroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Classroom"
        android:onClick="saveClassroom" />
</LinearLayout>